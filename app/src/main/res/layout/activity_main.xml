<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mike.droidevercraft.MainActivity">


    <TextView
        android:id="@+id/character1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:text="Player One" />

    <EditText
        android:id="@+id/character1_name_input"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:maxLength="20"
        android:inputType="text" />

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="SaveName1"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:onClick="saveCharacter1"/>

    <TextView
        android:id="@+id/character2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:text="Player Two" />

    <EditText
        android:id="@+id/character2_name_input"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:maxLength="20"
        android:inputType="text" />

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="SaveName2"
        android:textSize="20dp"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:onClick="saveCharacter2"/>

    <Button
        android:id="@+id/goToPlayButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="Go To Play"
        android:textSize="20dp"
        android:onClick="goToPlay"/>

</LinearLayout>
